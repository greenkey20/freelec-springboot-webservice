{{>layout/header}}

<!--2023.6.23(금) header, footer 추가 후 수정-->
<h1>스프링부트로 시작하는 웹 서비스 Ver.2</h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
        </div>
    </div>

    <br>
    <!--2023.6.25(일) 17h5 게시글 전체 조회 -> 목록 출력 영역-->
    <table class="table table-horizontal table-vertical">
        <thead class="table-strong">
        <tr>
            <th>게시글 번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>최종 수정일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#posts}} <!--posts라는 List 순회-->
            <tr>
                <td>{{id}}</td> <!--List에서 뽑아낸 객체의 필드 사용-->
                <td>{{title}}</td>
                <td>{{author}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>
</div>

{{>layout/footer}}